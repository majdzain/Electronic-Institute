<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/comment_images_item"
    android:gravity="right">

    <TextView
        android:id="@+id/commentName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#9CFEE3BC"
        android:text="Student"
        android:textColor="#000"
        android:textSize="16.5sp"
        android:textStyle="bold" />

    <androidx.cardview.widget.CardView
        android:id="@+id/commentMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:background="@color/blue"
        android:elevation="4dp"
        android:visibility="visible"
        app:cardBackgroundColor="@color/blue"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/commentText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="12dp"
                android:layout_marginBottom="5dp"
                android:drawablePadding="6dp"
                android:text="Comment Of Student"
                android:textColor="#000"
                android:textSize="15sp"
                android:visibility="gone" />

            <com.ei.zezoo.MyGridView
                android:id="@+id/commentImages"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:columnWidth="100dp"
                android:gravity="center"
                android:numColumns="3"
                android:stretchMode="columnWidth"
                android:visibility="gone" />

            <FrameLayout
                android:id="@+id/commentFrameImageOne"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/commentImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/aaaa"></ImageView>

                <ProgressBar
                    android:id="@+id/loadingImage"
                    style="?android:attr/progressBarStyleLarge"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center" />
            </FrameLayout>

            <LinearLayout
                android:id="@+id/commentLinearImageTwo"
                android:layout_width="300dp"
                android:layout_height="150dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <FrameLayout
                    android:layout_width="150dp"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/commentImage1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingRight="1dp"
                        android:src="@drawable/aaaa"></ImageView>


                    <ProgressBar
                        android:id="@+id/loadingImage1"
                        style="?android:attr/progressBarStyleLarge"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_gravity="center"
                        android:paddingRight="1dp" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="150dp"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/commentImage2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingLeft="1dp"
                        android:src="@drawable/aaaa"></ImageView>

                    <ProgressBar
                        android:id="@+id/loadingImage2"
                        style="?android:attr/progressBarStyleLarge"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_gravity="center" />
                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/commentLinearImageThree"
                android:layout_width="300dp"
                android:layout_height="100dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <FrameLayout
                    android:layout_width="100dp"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/commentImage11"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="1dp"
                        android:src="@drawable/aaaa"></ImageView>

                    <ProgressBar
                        android:id="@+id/loadingImage11"
                        style="?android:attr/progressBarStyleLarge"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_gravity="center" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="100dp"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/commentImage12"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/aaaa"></ImageView>

                    <ProgressBar
                        android:id="@+id/loadingImage12"
                        style="?android:attr/progressBarStyleLarge"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="1dp"
                        android:layout_marginRight="1dp" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="100dp"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/commentImage13"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="1dp"
                        android:src="@drawable/aaaa"></ImageView>

                    <ProgressBar
                        android:id="@+id/loadingImage13"
                        style="?android:attr/progressBarStyleLarge"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_gravity="center" />
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/commentDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date"
        android:textColor="#6f6e6e"
        android:textSize="14sp"
        android:visibility="gone" />
</LinearLayout>